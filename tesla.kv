#:kivy 1.0.9

<Car>:
    size: 20, 10
    origin: 10, 5
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
            source: "./images/car.png"
        PopMatrix	

<Game>:
    car: game_car
    canvas:
        Rectangle:
            pos: self.pos
            size: 1429, 660
            source: "./images/MASK1.png"

    Car:
        id: game_car
        center: self.parent.center

